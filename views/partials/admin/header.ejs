    <style>
        body {
            background-color: #f8f8f8; /* off white */
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar-top {
            background-color: rgb(229, 225, 230);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .navbar-top h1 {
            color: #339999;
            margin: 0;
            font-size: 24px;
            font-family: 'Trebuchet MS', sans-serif;
        }
        
        .sidebar {
            width: 250px;
            background-color: rgb(229, 225, 230);
            color: black;
            height: 100vh;
            float: left;
            padding-top: 20px;
            font-family: 'Segoe UI', sans-serif;
        }
        .sidebar h2 {
            color: #339999;
            text-align: center;
            margin-bottom: 20px;
        }
        .menu-item {
            padding: 10px 20px;
            border-bottom: 1px solid #d3d3d3; /* ash line */
            cursor: pointer;
        }
        .menu-item a {
            text-decoration: none;
            color: black;
            display: block;
        }
        .menu-item:hover {
            background-color: #339999;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
            background-color: #f8f8f8;
            font-family: 'Segoe UI', sans-serif;
        }
        .main-content h2 {
            font-weight: bold;
            color: black;
        }
        .logout-btn {
            background-color: #339999;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            margin: 20px;
            cursor: pointer;
            font-family: 'Segoe UI', sans-serif;
        }
    </style>
</head>
<body>
    <div class="navbar-top">
        <h1>DashMovino</h1>
        <div class="search-bar">
            
            <img src="/admin-assets/imgs/people/avatar2.jpg" alt="Admin" style="height: 40px; width: 40px; border-radius: 50%; margin-left: 15px;">
        </div>
    </div>
    
    <div class="sidebar">
        <div class="menu-item"><a href="/admin/">Dashboard</a></div>
        <div class="menu-item"><a href="/admin/users">Customers</a></div>
        <div class="menu-item"><a href="/admin/categories">Category</a></div>
        <div class="menu-item"><a href="/admin/brands">Brands</a></div>
        <!-- <div class="menu-item"><a href="/admin/product/add-product">Add Product</a></div> -->
        <div class="menu-item"><a href="/admin/products">Products</a></div>
        <div class="menu-item"><a href="/admin/coupons">Coupon</a></div>
        <div class="menu-item"><a href="/admin/banners">Banner</a></div>
        <div class="menu-item"><a href="/admin/orders">Orders</a></div>
        <button class="logout-btn" id="logoutBtn">Logout</button>
    </div>

  
</body>

