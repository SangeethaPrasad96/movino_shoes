          <thead class="table-dark">
            <tr>
              <th>Sl. No</th>
              <th>Image</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Subcategory</th>
              <th>Price (‚Çπ)</th>
              <th>Stock</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (products.length === 0) { %>
              <tr><td colspan="9">No products added.</td></tr>
            <% } else { %>
              <% products.forEach((p, index) => { %>
                <tr>
                  <td><%= index + 1 + ((currentPage - 1) * 5) %></td>
                  <td>
                    <% p.images.forEach(img => { %>
                      <img src="/uploads/products/<%= img %>" width="50" height="40" class="m-1 rounded shadow-sm">
                    <% }) %>
                  </td>
                  <!-- <td>
                    <% if (p.images.length > 0) { %>
                      <img src="/uploads/products/<%= p.images[0] %>" width="50" height="40" class="m-1 rounded shadow-sm">
                    <% } else { %>
                      <span class="text-muted">No Image</span>
                    <% } %> -->
                  <!-- </td> -->
                  <td><%= p.name %></td>
                  <td><%= p.category %></td>
                  <td><%= p.subcategory %></td>
                  <td>‚Çπ<%= p.price %></td>
                  <td><%= p.stock %></td>
                  <td>
                    <% if (p.stock === 0) { %>
                      <span class="badge bg-danger">Out of Stock</span>
                    <% } else if (p.stock < 5) { %>
                      <span class="badge bg-warning text-dark">Low Stock</span>
                    <% } else { %>
                      <span class="badge bg-success">In Stock</span>
                    <% } %>
                  </td>
                  <td>
                    <a href="/admin/products/edit/<%= p._id %>" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
                    <a href="/admin/products/delete/<%= p._id %>" class="btn btn-danger btn-sm">üóëÔ∏è Delete</a>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
          

